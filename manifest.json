{
    "manifest_version": 3,
    "name": "django-sidebar",
    "version": "1.0",
    "description": "Toggle visible/invisible the sidebar in the django framework's official website.",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]  
      }
    ],
    "action": {
      "default_popup": "popup.html", 
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "100": "images/icon100.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "100": "images/icon100.png"
    }
  }